{
    "name": "ibnuafdel/daltphp",
    "description": "A simple, beginner-friendly PHP framework for learning. Inspired by Laravel.",
    "type": "project",
    "license": "MIT",
    "keywords": ["php", "framework", "micro", "learning", "sqlite", "tailwind", "vite", "daisyui", "Laravel"],
    "authors": [
        {
            "name": "ibnuafdel",
            "email": "ibnuafdel@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/database": "^12.20"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "framework/Core/",
            "Http\\": "Http/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "serve": "php artisan serve",
        "test": "vendor/bin/pest",
        "migrate": "php artisan migrate",
        "migrate:fresh": "php artisan migrate:fresh",
        "make:migration": "php artisan make:migration",
        "post-create-project-cmd": [
            "@php scripts/post-create.php"
        ]
    },
    "bin": [
        "artisan"
    ]
}
