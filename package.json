{
  "name": "dalt-php",
  "version": "1.0.0",
  "description": "DALT.PHP - A modern PHP framework with Tailwind CSS v3",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./resources/css/input.css -o ./public/css/style.css",
    "build:js": "esbuild resources/js/app.js --bundle --outfile=public/js/app.js --target=es2020",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
    "dev:css": "tailwindcss -i ./resources/css/input.css -o ./public/css/style.css --watch",
    "dev:js": "esbuild resources/js/app.js --bundle --outfile=public/js/app.js --target=es2020 --watch",
    "watch": "npm run dev",
    "prod": "npm run prod:css && npm run prod:js",
    "prod:css": "tailwindcss -i ./resources/css/input.css -o ./public/css/style.css --minify",
    "prod:js": "esbuild resources/js/app.js --bundle --outfile=public/js/app.js --target=es2020 --minify"
  },
  "keywords": [],
  "author": "ibnuafdel",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "daisyui": "^4.12.18",
    "esbuild": "^0.24.2",
    "tailwindcss": "^3.4.14"
  },
  "dependencies": {
    "alpinejs": "^3.14.7"
  }
}
